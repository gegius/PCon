            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black" Padding="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                
                                <Border.Background>
                                    <RadialGradientBrush Opacity="0.7" Center="0.5 0.5" RadiusX="0.8" RadiusY="0.8">
